<Window x:Class="CalcWithLoginscreen.Calculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalcWithLoginscreen"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Calculator" Height="300" Width="500">
    <Grid>
        <Border MinWidth="300" MaxWidth="500" Margin="15 15 15 15" CornerRadius="20" Background="White" VerticalAlignment="Center" Padding="35">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Color="black"></DropShadowEffect>
            </Border.Effect>

            <StackPanel>
                <TextBlock  Text="Каклулятор" FontSize="30" FontWeight="Bold" Margin="0 0 0 15" Width="178"></TextBlock>

                <TextBox x:Name="calc" materialDesign:HintAssist.Hint="Введите че считать" FontSize="14" Margin="0 0 0 15"/>

                <Grid Margin="0 0 0 20">
                    <Button HorizontalAlignment="Right" Content="Считать" Style="{StaticResource MaterialDesignRaisedButton}" Click="Login_Button_Click"></Button>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</Window>
